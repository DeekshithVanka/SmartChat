{
  "name": "smartchat",
  "version": "1.0.0",
  "description": "A real-time chat application with advanced features",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node backend/src/index.js",
    "server": "nodemon backend/src/index.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && npm install && npm run build",
    "prod": "NODE_ENV=production npm start"
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "mern"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
